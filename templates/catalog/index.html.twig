{% extends 'base.html.twig' %}

{% block title %}Product Catalogs{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">Product Catalogs</h1>

                <!-- Full Catalog -->
                <div class="mb-4">
                    <h3>Complete Catalog</h3>
                    <p>Download the complete product catalog ({{ totalProducts }} products)</p>
                    <a href="{{ path('catalog_full_pdf') }}" class="btn btn-primary me-2">Download Full Catalog PDF</a><br>
                    <a href="{{ path('catalog_advanced_pdf') }}" class="btn btn-outline-primary">Download Advanced PDF</a>
                </div>

                <!-- Category Catalogs -->
                <div>
                    <h3>Category Catalogs</h3>
                    {% if categories is not empty %}
                        <ul class="list-group">
                            {% for category in categories %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>{{ category.name }}</span>
                                    <a href="{{ path('catalog_category_pdf', {id: category.id}) }}" class="btn btn-sm btn-primary">Download PDF</a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p>No categories available.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
